<div class="container mt-5">
  <div class="d-flex justify-content-between mb-3">
    <div></div>
    <%= link_to "New Board", root_path, class: "btn btn-danger" %>
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>No</th>
          <th>Name</th>
          <th>Email</th>
          <th>Width</th>
          <th>Height</th>
          <th>Num of Mines</th>
          <th>Created At</th>
        </tr>
      </thead>
      <tbody>
        <% @boards.each do |row| %>
          <tr>
            <td><%=row.id%></td>
            <td><%= link_to row.name, board_url(row), class: "text-decoration-none text-primary" %></td>
            <td><%= row.user.email %></td>
            <td><%= row.width %></td>
            <td><%= row.height %></td>
            <td><%= row.num_of_mines %></td>
            <td><%= row.created_at.strftime("%d-%m-%Y %H:%M:%S") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="d-flex justify-content-center mt-4">
  <%= paginate @boards %>
</div>